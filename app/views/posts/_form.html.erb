<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Título", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field input_width' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Conteúdo", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :class => 'text_area input_width input_textarea' %>
    </div>
  </div>

  <div class="form-actions radius">
    <%= f.submit "Salvar", :class => 'btn btn-large' %>
    <%= link_to "Cancelar", posts_path, :class => 'btn btn-large' %>
  </div>
<% end %>
